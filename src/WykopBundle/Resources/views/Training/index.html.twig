{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Training list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idtag</th>
                <th>Idcity</th>
                <th>Nameuser</th>
                <th>Distance</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('training_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tag }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.nameUser }}</td>
                <td>{{ entity.distance }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('training_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('training_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('training_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
